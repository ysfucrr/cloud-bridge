{
  "name": "cloud-bridge-server-optimized",
  "version": "2.0.0",
  "description": "High-performance Cloud Bridge Server for SCADA-Mobile communication",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "setup-redis": "node scripts/setup-redis.js",
    "redis:start": "cd redis && redis-server redis.conf",
    "redis:cli": "cd redis && redis-cli",
    "start": "node server-optimized.js",
    "start:dev": "nodemon server-optimized.js",
    "start:with-redis": "concurrently \"npm run redis:start\" \"wait-on tcp:6379 && npm start\"",
    "monitor": "node monitor.js",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run electron:pack -- --publish=never",
    "electron:pack:win": "electron-builder --win",
    "electron:pack:mac": "electron-builder --mac",
    "electron:pack:linux": "electron-builder --linux",
    "build": "npm run setup-redis && npm run electron:dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "scada",
    "cloud-bridge",
    "socket.io",
    "cluster",
    "high-performance",
    "redis",
    "worker-threads"
  ],
  "author": "SCADA Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "@socket.io/redis-adapter": "^8.2.1",
    "ioredis": "^5.3.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "uuid": "^9.0.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "express-rate-limit": "^6.7.0",
    "prom-client": "^14.2.0",
    "dotenv": "^16.0.3",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.5.0",
    "socket.io-client": "^4.6.1",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.scada.cloud-bridge-server",
    "productName": "SCADA Cloud Bridge Server",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "server-optimized.js",
      "redis-service.js",
      "register-processor-worker.js",
      "support.html",
      "privacy-policy.html",
      "package.json",
      ".env",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asarUnpack": [
      "server-optimized.js",
      "redis-service.js",
      "register-processor-worker.js",
      "support.html",
      "privacy-policy.html",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "redis",
        "to": "redis",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "sign": false,
      "signingHashAlgorithms": []
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SCADA Cloud Bridge Server"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "cloud-bridge-server"
    }
  }
}